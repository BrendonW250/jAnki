<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>jAnki</title>

    <!-- Stylesheets -->
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/cards.css">

    <!-- Fonts & Icons -->
    <link href="https://fonts.googleapis.com/css2?family=Harmattan:wght@400;700&display=swap" rel="stylesheet">
</head>

<body>
    <nav>
        <img src="images/jAnki-Logo.png" alt="jAnki">
        <div class="buttonHolder">
            <a href="/logout" class="button">Logout</a>
        </div>
    </nav>

    <main>

        <section class="timer">
            <div class="container">
                <h1>00:00</h1>
            </div>
        </section>

        <section id="cardReview">

            <h1>
                <%= user.userName %>'s jAnki Card Deck
            </h1>

            <div>
                <button id="all" class="all button">Show All Cards</button>
                <button id="showRandom" class="showRandom button">Random Card</button>
            </div>

            <div id="card" class="card">
                <% todos.forEach( el=> { %>
                    <div id="card-<%=el._id%>" class='cardData' data-id='<%=el._id%>'>
                        <p data-id='<%=el._id%>' class='<%= el.completed === true ? ' completed' : 'not' %>
                            cardInfo
                            cardFront'>
                            <%=el.cardFront %>
                        </p>
                        <p data-id='<%=el._id%>'
                            class="<%= el.completed === true ? 'completed' : 'not' %> cardInfo cardBack hidden">
                            <%= el.cardBack %>
                        </p>
                        <a data-id='<%=el._id%>' id="showCardBack-<%=el._id%>" class="button displayButton">Show
                            Back</a>
                        <span class='del hoverState'> Delete </span>
                    </div>
                    <% }) %>

            </div>

            <h2>
                You have <%= left %> cards to review!
            </h2>
        </section>

        <section id="addACard">
            <h3>Create a card for your jAnki deck!</h3>

            <form action="/todos/createTodo" method='POST'>
                <div class="formGroup">
                    <label for="cardFront">Front:</label>
                    <input type="text" placeholder="Enter front of card" name='cardFront' id="front" required>
                </div>
                <div class="formGroup">
                    <label for="cardBack" id="hideBack">Back:</label>
                    <input type="text" placeholder="Enter back of card" name='cardBack' id="back" required>
                </div>

                <input type="submit" class="button" value="Add Card">
            </form>
        </section>
    </main>

    <script src="js/main.js"></script>
    <script src="./timer.js "></script>

</body>

</html>

